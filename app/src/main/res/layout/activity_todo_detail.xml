<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_centerVertical="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@id/iv_title"
            android:layout_centerVertical="true"
            android:hint="@string/title"
            android:textSize="@dimen/y25"
            android:textColor="@color/colorNormalText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa"
            android:layout_toRightOf="@id/iv_title"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25">

        <ImageView
            android:id="@+id/iv_time_range"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_toRightOf="@id/iv_time_range"
            android:text="@string/start"
            android:layout_centerVertical="true"
            android:textSize="@dimen/y25"
            android:textColor="@color/colorNormalText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:textSize="@dimen/y25"
            android:textColor="@color/colorHintText"
            android:text="5月7日 12:30"
            android:layout_alignParentEnd="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa"
            android:layout_toRightOf="@id/iv_time_range"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25">

        <ImageView
            android:id="@+id/iv_time_range1"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_toRightOf="@id/iv_time_range1"
            android:text="@string/end"
            android:layout_centerVertical="true"
            android:textSize="@dimen/y25"
            android:textColor="@color/colorNormalText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:textSize="@dimen/y25"
            android:textColor="@color/colorHintText"
            android:text="5月7日 12:30"
            android:layout_alignParentEnd="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa"
            android:layout_toRightOf="@id/iv_time_range1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>